<h1>Requests</h1>

<table class="table table-striped">
  <tr>
    <th>Status</th>
  	<th>Hook name</th>
  	<th>Date</th>
  	<th>-</th>
  </tr>
  <tr>
  {{#requests}}
  {{#if passed}}
    <td><span class="btn btn-success btn-sm">PASSED</span></td>
  {{else}}
    <td><span class="btn btn-danger btn-sm">NO PASS</span></td>
  {{/if}}
  	<td><a href="/hooks/{{hookid}}">{{name}}</a></td>
  	<td>{{formatDateTime created}}</td>
  	<td>
  		<a href="/requests/{{id}}" class="btn btn-info btn-sm">View</a>
      {{#if logid}}
      <a href="/logs/{{logid}}" class="btn btn-warning btn-sm">Build log</a>
      {{/if}}
  	</td>
  </tr>
  {{/requests}}
</table>